            function openPopup() {
                overlay.classList.add('active');
                document.body.style.overflow = 'hidden';
                
                // Gestion de l'accessibilit√©
                popup.setAttribute('aria-hidden', 'false');
                document.querySelectorAll('body > *:not(.features-popup-overlay)').forEach(element => {
                    if (element.getAttribute('aria-hidden') !== 'true') {
                        element.setAttribute('aria-hidden', 'true');
                    }
                });
                
                // Focus sur le bouton de fermeture
                setTimeout(() => {
                    closeButton.focus();
                }, 100);
            }
            
            function closePopup() {
                overlay.classList.remove('active');
                document.body.style.overflow = '';
                
                // Restaurer l'accessibilit√©
                popup.setAttribute('aria-hidden', 'true');
                document.querySelectorAll('body > *:not(.features-popup-overlay)').forEach(element => {
                    element.removeAttribute('aria-hidden');
                });
                
                // Remettre le focus sur le bouton d'ouverture
                openButton.focus();
            }
            
            function handleTabKey(e) {
                if (overlay.classList.contains('active')) {
                    // Tous les √©l√©ments focusables dans la popup
                    const focusableElements = popup.querySelectorAll('button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])');
                    const firstFocusableElement = focusableElements[0];
                    const lastFocusableElement = focusableElements[focusableElements.length - 1];
                    
                    // G√©rer la navigation par tabulation
                    if (e.key === 'Tab') {
                        if (e.shiftKey && document.activeElement === firstFocusableElement) {
                            e.preventDefault();
                            lastFocusableElement.focus();
                        } else if (!e.shiftKey && document.activeElement === lastFocusableElement) {
                            e.preventDefault();
                            firstFocusableElement.focus();
                        }
                    }
                }
            }
            
            function handleEscape(e) {
                if (e.key === 'Escape' && overlay.classList.contains('active')) {
                    closePopup();
                }
            }
            
            function handleOutsideClick(e) {
                if (e.target === overlay) {
                    closePopup();
                }
            }
            
            if (openButton) {
                openButton.addEventListener('click', openPopup);
            }
            
            if (closeButton) {
                closeButton.addEventListener('click', closePopup);
            }
            
            document.addEventListener('keydown', handleTabKey);
            document.addEventListener('keydown', handleEscape);
            overlay.addEventListener('click', handleOutsideClick);
        });
    </script>
    
