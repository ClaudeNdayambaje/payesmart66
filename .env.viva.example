# Configuration Viva Payments
VIVA_CLIENT_ID=votre_client_id_viva
VIVA_CLIENT_SECRET=votre_client_secret_viva

# Environnement (development ou production)
NODE_ENV=development

# Endpoint de base API Viva
VIVA_API_BASE_URL_DEV=https://demo-api.vivapayments.com
VIVA_API_BASE_URL_PROD=https://api.vivapayments.com

# Endpoint pour le token
VIVA_TOKEN_URL_DEV=https://demo-accounts.vivapayments.com/connect/token
VIVA_TOKEN_URL_PROD=https://accounts.vivapayments.com/connect/token

# Configuration du serveur (utiliser 3002 pour éviter les conflits avec le frontend)
PORT=3002

# Terminal par défaut (pour les tests)
DEFAULT_TERMINAL_ID=16000010

# Montant minimum pour les tests (en centimes)
MIN_TEST_AMOUNT=30
